<% layout("layouts/boilerplate")%>
<div class="row">
    <h1 class="text-center">Register</h1>
    <div class="col-6 offset-3 mb-5">
        <form class="needs-validation" action="/register" method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="uername">Username</label>
                <input class="form-control" type="text" name="user[username]" id="uername" placeholder="Your unique Username" required>
                <div class="valid-feedback">
                    Awesome!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" name="user[email]" id="email" placeholder="Email" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" name="user[password]" id="password" placeholder="Super Secret Password" required>
                <div class="valid-feedback">
                    Let's keep this safe.
                </div>
            </div>
            <button class="btn btn-primary">Register</button>
        </form>
    </div>
</div>