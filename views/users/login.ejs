<% layout("layouts/boilerplate")%>
<div class="row">
    <h1 class="text-center">Log In</h1>
    <div class="col-6 offset-3 mb-5">
        <form class="needs-validation" action="/login" method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="uername">Username</label>
                <input class="form-control" type="text" name="username" id="uername" placeholder="Your unique Username" required>
                <div class="valid-feedback">
                    Awesome!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" placeholder="Your Super Secret Password" required>
                <div class="valid-feedback">
                    Let's keep this safe.
                </div>
            </div>
            <button class="btn btn-primary">Log In</button>
        </form>
    </div>
</div>